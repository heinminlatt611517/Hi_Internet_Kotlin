<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout
    android:background="@drawable/login_dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="156dp"
    android:padding="15dp"
    android:orientation="vertical"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

            <com.hti.hiinternet.util.ui.HtiTextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_txt_hi_internet"
                android:layout_marginBottom="10dp"
                style="@style/TextAppearance.MaterialComponents.Headline6"/>

            <com.hti.hiinternet.util.ui.HtiTextView
                android:id="@+id/dialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_txt_log_out_body"
                style="@style/TextAppearance.MaterialComponents.Body1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">
            <com.hti.hiinternet.util.ui.HtiButton
                android:id="@+id/btn_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="NO"
                android:layout_marginRight="4dp"
                android:textColor="@android:color/white"
                />
                <com.hti.hiinternet.util.ui.HtiButton
                    android:id="@+id/btn_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="YES"
                    android:layout_marginLeft="4dp"
                    android:background="#203BFF"
                    android:textColor="@android:color/white"
                    />

            </LinearLayout>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

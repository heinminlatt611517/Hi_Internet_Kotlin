<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_noti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="10dp"

        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="@color/card_view_background"
        >


<LinearLayout android:background="@drawable/dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_done"
                android:layout_marginBottom="10dp"/>

            <com.hti.hiinternet.util.ui.HtiTextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_login_fail"
                android:layout_marginBottom="10dp"
                style="@style/TextAppearance.MaterialComponents.Headline6"/>

            <com.hti.hiinternet.util.ui.HtiTextView
                android:id="@+id/dialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your ticket ID is "
                style="@style/TextAppearance.MaterialComponents.Body1"/>

            <com.hti.hiinternet.util.ui.HtiButton
                android:id="@+id/dialog_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="OK"
                app:backgroundTint="@color/colorPrimaryDark"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="#ffffff"
                />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

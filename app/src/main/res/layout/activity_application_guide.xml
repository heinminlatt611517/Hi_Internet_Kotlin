<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3b5998"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_medium"
    tools:context=".activity_application_guide">

   <ImageView
       android:id="@+id/iv_one"
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:src="@drawable/ic_application_usage"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       />

    <ImageView
        android:id="@+id/iv_two"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/user_guide_two"
        app:layout_constraintTop_toBottomOf="@+id/iv_one"
        android:layout_marginTop="@dimen/margin_medium"
        android:scaleType="fitXY"
        android:paddingLeft="14dp"
        app:layout_constraintStart_toStartOf="@+id/iv_one"
        app:layout_constraintEnd_toEndOf="@+id/iv_one"/>

    <ImageView
        android:id="@+id/iv_three"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_usage_one"
        android:padding="2sp"
        app:layout_constraintTop_toBottomOf="@+id/iv_two"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_four"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_usage_two"
        android:padding="7dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_three"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_five"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_usage3"
        android:padding="6sp"
        app:layout_constraintTop_toBottomOf="@+id/iv_four"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_six"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_usage_four"
        android:padding="7sp"
        app:layout_constraintTop_toBottomOf="@+id/iv_five"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/iv_seven"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_usage_five"
        android:padding="6sp"
        app:layout_constraintTop_toBottomOf="@+id/iv_six"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/iv_eight"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_usage_six"
        android:padding="7sp"
        app:layout_constraintTop_toBottomOf="@+id/iv_seven"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/iv_googlePlay"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginEnd="68dp"
        android:src="@drawable/ic_google_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_download"
        app:layout_constraintStart_toStartOf="@+id/btn_download"
        />
    <TextView
        android:id="@+id/tv_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/btn_download"
        app:layout_constraintEnd_toEndOf="@+id/btn_download"
        android:text="(or)"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/btn_download"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_download"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Download"
        android:textSize="8sp"
        android:textAllCaps="false"
        app:cornerRadius="8dp"
        android:layout_marginRight="70dp"
        app:layout_constraintTop_toTopOf="@+id/iv_eight"
        app:layout_constraintBottom_toBottomOf="@+id/iv_eight"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="182dp"
    android:layout_marginBottom="18dp">

<com.google.android.material.card.MaterialCardView
    android:id="@+id/card_text"
    android:layout_width="320dp"
    android:layout_height="180dp"
    android:layout_below="@+id/layout_category"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/toolbarBackground"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:text="PAY NOW"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.hti.hiinternet.util.ui.HtiTextView
                android:id="@+id/tv_payment_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Due Date"
                android:textSize="18dp"
                android:textStyle="normal" />

            <com.hti.hiinternet.util.ui.HtiTextView
                android:id="@+id/tv_payment_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="10"
                style="@style/TextAppearance.MaterialComponents.Headline5" />

            <com.hti.hiinternet.util.ui.HtiTextView
                android:id="@+id/tv_payment_month_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Aug/2019"
                android:textSize="17dp"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:layout_width="1.5dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#AFACAC" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical">

            <com.hti.hiinternet.util.ui.HtiTextView
                android:id="@+id/tv_payment_pay"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/custom_text"
                android:gravity="center"
                android:padding="2dp"
                android:text="unpaid"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.hti.hiinternet.util.ui.HtiTextView
                    android:id="@+id/tv_invoice_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="2dp"
                    android:text="832-1579072723"
                    android:singleLine="false"
                    android:textSize="16dp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.hti.hiinternet.util.ui.HtiTextView
                    android:id="@+id/tv_payment_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="27,000"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <com.hti.hiinternet.util.ui.HtiTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="8dp"
                    android:padding="2dp"
                    android:text="MMK"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.hti.hiinternet.util.ui.HtiTextView
                android:id="@+id/tv_payment_modified_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="(for August/29)"
                android:textSize="13dp"
                android:textStyle="normal" />

        </LinearLayout>


    </LinearLayout>



    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
</LinearLayout>

